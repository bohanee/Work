<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BohaneeParts" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bohanee_red_1</item>
        <item name="colorPrimaryVariant">@color/bohanee_red_1</item>
        <item name="colorOnPrimary">@color/white</item>
         Secondary brand color.
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BohaneeText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000</item>
    </style>
    <style name="BohaneeButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#000</item>
        <item name="backgroundTint">#fff</item>
        <item name="cornerRadius">10dp</item>
        <item name="cornerSize">20dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ActionBar" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">true</item>

    </style>
</resources>