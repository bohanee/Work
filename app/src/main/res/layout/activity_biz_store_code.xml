<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BizStoreCodeActivity">

    <ImageView
        android:id="@+id/logo_imgview_2"
        android:layout_width="235dp"
        android:layout_height="215dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="68dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bohanee_logo" />

    <EditText
        android:id="@+id/biz_code_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:hint="Business Code"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="@+id/logo_imgview_2"
        app:layout_constraintTop_toBottomOf="@+id/logo_imgview_2" />

    <EditText
        android:id="@+id/store_code_et_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Store Code"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="@+id/biz_code_et"
        app:layout_constraintTop_toBottomOf="@+id/biz_code_et" />

    <Button
        android:id="@+id/biz_code_continue_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Continue"
        android:background="@drawable/bohanee_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_code_et_2" />
</androidx.constraintlayout.widget.ConstraintLayout>